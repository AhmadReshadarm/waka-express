{
  "name": "voodoolab",
  "version": "1.0.0",
  "description": "voodoolab app with typescript + express.js + typeorm",
  "scripts": {
    "auth:dev": "cd ./authorization && npm run dev",
    "barcode:dev": "cd ./barcode && npm run dev",
    "gateway:start": "cd ./gateway && npm run start",
    "typecheck": "tsc --noEmit --incremental false --tsBuildInfoFile null",
    "circular": "pnpm run prestart && madge --circular dist/",
    "lint": "eslint 'core/**/*'",
    "lint:fix": "eslint --fix 'src/**/*'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "gateway:production": "cd ./gateway && pm2 start server.js --name 'gateway' -- start",
    "auth:production": "cd ./authorization && npm run build && cp ./.env ./dist/authorization && cd ./dist/authorization && pm2 start main.js --name 'authorization' -- start",
    "barcode:production": "cd ./barcode && npm run build && cp ./.env ./dist/barcode && cd ./dist/barcode && pm2 start main.js --name 'barcode' -- start",
    "dev:server": "npm-run-all --parallel auth:dev barcode:dev gateway:start",
    "pm2-start": "npm-run-all --sequential gateway:production auth:production barcode:production"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/method-override": "0.0.32",
    "@types/morgan": "^1.9.3",
    "body-parser": "^1.20.0",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "helmet": "^5.1.0",
    "jsonwebtoken": "^9.0.1",
    "method-override": "^3.0.0",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "pino": "^6.13.1",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.7.0",
    "typeorm": "^0.3.7",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.42",
    "@types/pino": "^6.3.11",
    "@types/uuid": "^8.3.4",
    "concurrently": "^7.2.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.1.0",
    "nodemon": "^3.0.1",
    "pino-pretty": "^6.0.0",
    "typescript": "^4.7.3"
  }
}
